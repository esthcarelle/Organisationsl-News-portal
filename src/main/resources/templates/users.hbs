{{#partial "content"}}
<div class="well" style="background-color:black;color:white;margin-top:10%">

    <h1>Add Employees</h1>
    <br>
    <br>

    <form action="/users/new" method="post" >
        <div class="form-group">
            <label>Employee Name</label>
            <input type="text" name="userName" class="form-control" required>
        </div>
         <div class="form-group">
                    <label>Employee position</label>
                    <input type="text" name="position" class="form-control" required>
                </div>
        <div class="form-group">
            <label>Department </label>
             <select style="color:black"id="departmentId" name="departmentId">
                                {{#each departments}}
                                    <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
        </div>
        <div class="form-group">
            <label>Role</label>
            <input type="text" name="role" class="form-control" required>
        </div>
        <button type="submit" class="button btn-success">Submit</button>
    </form>
    </div>

    <br>
    <br>
<div class="well">
    <table class="table">
        <tr>
            <th scope="col">Employee Name</th>
            <th scope="col">Employee position</th>
            <th scope="col">Department Id</th>
            <th scope="col">Role</th>
        </tr>
        {{#each users}}
            <tr>
                <td><a href="/users/{{id}}">{{userName}}</td>
                <td>{{position}}</td>
                <td>{{departmentId}}</td>
                <td>{{role}}</td>

            </tr>
        {{/each}}
    </table>
    </div>

{{/partial}}

{{>layout.hbs}}