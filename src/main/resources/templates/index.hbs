    <br>
    <br>

    <form action="/general/news" method="post" >
        <div class="form-group">
            <label>New:</label>
            <input type="text" name="news" class="form-control" required>
        </div>

        <button type="submit" class="button btn-success">Submit</button>
    </form>
  </div>
    <br>
    <br>

  {{#each news}}
         <div class="well" style="background-color:black;color:white;margin-top:10%;margin-left:70%;width:80%">
                <p>{{news}}</p>

         </div>
        {{/each}}

    </body>
