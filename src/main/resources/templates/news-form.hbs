{{#partial "content"}}
<div class="well" style="background-color:black;color:white;margin-top:10%">
    <h1>Add Specific News</h1>
    <br>
    <br>

    <form action="/news" method="post" >
        <div class="form-group">
            <label>Content</label>
            <input type="text" name="news" class="form-control" required>
        </div>
        <div>
            <label>Department </label>
                           <select style="color:black" id="departmentId" name="departmentId">
                                              {{#each departments}}
                                                  <option value="{{id}}">{{name}}</option>
                                              {{/each}}
                                          </select>
                      </div>


        <button type="submit" class="button btn-success">Submit</button>
    </form>
   </div>
    <br>
    <br>
    <div class="well">
      <table class="table">
        <tr>
            <th scope="col">Content</th>
            <th scope="col">Department Id</th>


        </tr>
        {{#each news}}
            <tr>
                <td>{{news}}</td>
                <td>{{departmentId}}</td>

            </tr>
        {{/each}}
    </table>
    </div>


{{/partial}}
{{>layout.hbs}}